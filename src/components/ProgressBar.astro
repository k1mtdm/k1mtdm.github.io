---
interface Props {
  class: string;
  progress: string;
}

const { class: className, progress } = Astro.props;
---

<div class="relative h-2.5 w-full rounded-full bg-gray-200 dark:bg-gray-700">
  <div class:list={['progress h-2.5 rounded-full bg-hero-lime', className]}>
    <p class="absolute right-0">{progress}%</p>
  </div>
</div>
