<div style="height: 50vh; background-color: black;" id="vanta">
  <slot />
</div>

<!--Load Vanta.js-->
<script
  defer
  src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"
></script>
<script
  defer
  src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.fog.min.js"
></script>
<script type="module">
  //Creating a unique experience for each person by creating a random dark and light color and load those colores into Vanta object.

  //Foreground color
  const randomColor = () => {
    let color = '#';
    for (let i = 0; i < 3; i++)
      color += (
        '0' +
        Math.floor(((1 + Math.random()) * Math.pow(16, 2)) / 2).toString(16)
      ).slice(-2);
    return color;
  };

  //Background Color
  const randomBackgroundColor = () => {
    let color = '#';
    for (let i = 0; i < 3; i++)
      color += (
        '0' + Math.floor((Math.random() * Math.pow(16, 2)) / 2).toString(16)
      ).slice(-2);
    return color;
  };

  //Creating a VANTA object
  const vantaObj = {
    el: '#vanta',
    mouseControls: true,
    touchControls: true,
    gyroControls: false,
    minHeight: 10.0,
    minWidth: 10.0,
    highlightColor: 0xf4f4f4,
    midtoneColor: 0xfffb,
    baseColor: 0xccff33,
    blurFactor: 1.0,
    zoom: 0.4,
  };

  //Init Vanta
  VANTA.FOG(vantaObj);
  document.querySelector('#vanta').style.maxHeight = '100%';

  //Console message ;D
  if (navigator.userAgent.toLowerCase().indexOf('chrome') > -1) {
    const consoleMessage = [
      '\n %c Made with \u2665 by Zoltan \n',
      'color: #fff; background: #000; padding: 5px 0;',
    ];
    window.console.log.apply(console, consoleMessage);
  } else window.console && window.console.log('Made with \u2665 by Zoltan');
</script>
